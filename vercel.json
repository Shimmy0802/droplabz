{
  "rootDirectory": "apps/web",
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "corepack enable && pnpm install --no-frozen-lockfile",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "PNPM_HOME": "/root/.pnpm",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}
