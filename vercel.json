{
  "buildCommand": "cd apps/web && pnpm build",
  "devCommand": "cd apps/web && pnpm dev",
  "installCommand": "corepack enable && pnpm install --no-frozen-lockfile",
  "outputDirectory": "apps/web/.next",
  "env": {
    "PNPM_HOME": "/root/.pnpm",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}
